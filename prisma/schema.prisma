generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Island {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  terrainId   String   @unique
  name        String
  description String?
  workshopId  String?
  isOfficial  Boolean
}

model Server {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  modIds           BigInt[]
  queryPort        Int
  gamePort         Int
  appId            Int
  playerCount      Int      @default(0)
  maxPlayerCount   Int      @default(0)
  queueCount       Int      @default(0)
  timeAcceleration Int[]
  ipAddress        String
  name             String
  version          String
  clockTime        String
  island           String
  isFirstPerson    Boolean
  isPassword       Boolean
  isBattleEye      Boolean
  isVAC            Boolean
  isPublicHive     Boolean
  isMonetised      Boolean
  isOffline        Boolean
}
